# GET Request para obtener todos los productos
GET http://localhost:5000/productos

# GET Request para obtener un producto específico (cambia el número de ID según tus datos)
GET http://localhost:5000/productos/1

# POST Request para agregar un nuevo producto
POST http://localhost:5000/productos
Content-Type: application/json

{
  "nombre": "Nuevo Producto",
  "precio": 200.0,
  "stock": 50,
  "imagen": "nuevo_producto.jpg"
}

# PUT Request para actualizar un producto existente (cambia el número de ID según tus datos)
PUT http://localhost:5000/productos/1
Content-Type: application/json

{
  "nombre": "Producto Actualizado",
  "precio": 250.0,
  "stock": 30,
  "imagen": "producto_actualizado.jpg"
}

# DELETE Request para eliminar un producto específico (cambia el número de ID según tus datos)
DELETE http://localhost:5000/productos/1

